<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-3 offset-3">
        <!-- asp-controller is optional to add below line-->
        <a asp-action="Upsert" asp-controller="Book" class="btn btn-info text-white form-control">
            Add New Book
        </a>
    </div>
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Author</td>
                    <td>ISBN</td>
                    <td></td>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/BookList.js"></script>
}